{
    "name": "liquipedia-scripts",
    "version": "1.0.1",
    "description": "liquipedia scripts with npm and browserify for violentmonkey",
    "private": true,
    "scripts": {
        "compile": "tsc",
        "make": "npm run compile && browserify -p esmify --outfile ./liquipedia.user.js --entry ./temp/src/liquipedia.user.brows.js; rimraf ./temp/; rimraf liquipedia.user.js.tmp-*",
        "build": "npm run make",
        "dev": "nodemon --watch src/ -e .ts --exec \"npm run build || exit 1\"",
        "dev:s": "nodemon --watch * -e brows.js --exec \"npm run make:sto\"",
        "update": "npm update && npm-check -u",
        "prettier:debug": "npx prettier --check .",
        "prettier": "npx prettier --write .",
        "format:staged": "eslint \"**/*.ts\" --fix && pretty-quick --staged --verbose --pattern \"**/*.{ts}\"  --ignore-path \"./.eslintignore\" ",
        "format": "eslint \"**/*.ts\" --fix && npm run prettier"
    },
    "gitHooks": {
        "pre-commit": "npm run format:staged && npm run prettier"
    },
    "author": "Totto",
    "license": "MIT",
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "browserify": "^17.0.0",
        "esmify": "^2.1.1",
        "nodemon": "^2.0.22"
    },
    "devDependencies": {
        "@types/browserify": "^12.0.37",
        "@types/jest": "^29.5.2",
        "@types/mousetrap": "^1.6.11",
        "@types/node": "^20.4.0",
        "babel-preset-es2020": "^1.0.2",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-deprecation": "^1.4.1",
        "eslint-plugin-github": "^4.8.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-optimize-regex": "^1.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-regexp": "^1.15.0",
        "eslint-plugin-security": "^1.7.1",
        "eslint-plugin-userscripts": "^0.3.0",
        "prettier": "^3.0.0",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=18.2.0",
        "npm": ">=8.10.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.7",
        "utf-8-validate": "^6.0.3"
    }
}
