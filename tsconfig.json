{
    "include": ["src/ts/*.ts","src/ts/types/*.d.ts"],
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "moduleResolution": "node",
        "lib": ["es2021", "dom"],
        "outDir": "temp",
        "allowJs": true,
        "rootDir": "src/ts/",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true
    },
    "rules": {
        "triple-equals": true,
        "curly": true,
        "strict-boolean-expressions": true,
        "no-unnecessary-condition": true
    },
    "types": ["src/ts/types/*.d.ts"],
    "files": ["src/ts/liquipedia.user.brows.ts"]
}
